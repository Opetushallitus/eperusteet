div
  .uusi-projekti-content
    h1(ng-bind="'luo-uusi-opas' |Â kaanna")
    // p(kaanna="'tahdella-pakolliset'")
    div.form-horizontal.projekti-form(ng-form="opasprojektiForm")
      .form-area
        .form-group-wrapper(ng-form='perustiedotForm', name='perustiedotForm')
          formfield(label='oppaan-nimi-label', model='opas', model-var='nimi', form='form', name='oppaanNimi', required, placeholder='anna-oppaan-nimi-placeholder', max='255')
            ohje(teksti='luonti-opas-nimi-ohje')
          .form-group
            label.col-sm-3.control-label
              span(ng-bind="'oppaan-oid-label' | kaanna")
              span *
            .col-sm-9
              .input-group
                input.form-control(ng-show='$$ryhmaNimi', ng-model='$$ryhmaNimi', disabled required)
                input.form-control(ng-hide='$$ryhmaNimi', ng-model='opas.ryhmaOid', disabled required)
                span.input-group-btn
                  button.btn.btn-default(ng-click='haeRyhma()', kaanna="'hae-ryhma'")
          // formfield(label='diaarinumero-label', model='opas', model-var='diaarinumero', form='perustiedotForm', name='diaarinumero', required, placeholder='anna-diaarinumero-placeholder', max='255', type='diaari')
            ohje(teksti='luonti-diaarinumero-ohje')
      .projekti-form-buttons
        button#cancel.btn(ui-sref='root.admin.oppaat', kaanna="'peruuta'" style="margin-right: 5px")
        button#submit.btn.btn-primary(type='submit' ng-click='tallennaOpas(opas)' ng-disabled='opasprojektiForm.$invalid' ng-bind="'luo-opas-nappi' | kaanna")
