                        <hibernateDialect>fi.vm.sade.eperusteet.utils.repository.dialect.CustomPostgreSqlDialect</hibernateDialect>
                        <url/>
                        <username/>
                        <password/>
                        <hibernateProperties>${project.basedir}/src/test/config/hibernate.properties</hibernateProperties>
                        <hibernateMapping>${project.basedir}/src/main/resources/hibernate-typedefs.hbm.xml</hibernateMapping>
                        <outputFile>${schema.file}</outputFile>
                        <scanDependencies>NONE</scanDependencies>
                    </configuration>
