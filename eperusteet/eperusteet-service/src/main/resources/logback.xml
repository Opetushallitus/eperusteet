<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} %-5p {%X{user}} [%thread] %-5level %logger: %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="org.apache.fop" level="off"/>
  <logger name="org.hibernate" level="error"/>
  <logger name="org.hibernate.tool.hbm2ddl" level="off"/>
  <logger name="org.springframework" level="warn"/>
  <logger name="fi.vm.sade" level="info"/>
  <logger name="fi.vm.sade.eperusteet" level="debug"/>
  <logger name="fi.vm.sade.eperusteet.PROFILING" level="trace"/>
  <logger name="fi.vm.sade.eperusteet.service.dokumentti.impl.DokumenttiServiceImpl" level="info"/>
  <logger name="fi.vm.sade.eperusteet.service.dokumentti.impl.DokumenttiEventListener" level="info"/>
  <logger name="fi.vm.sade.eperusteet.service.dokumentti.impl.DokumenttiBuilderServiceImpl" level="info"/>
  <logger name="com.mangofactory.swagger" level="warn"/>
  <root level="info">
    <appender-ref ref="console"/>
  </root>
</configuration>
